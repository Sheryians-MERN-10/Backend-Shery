<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>

    <hr>

    <form action="/create" method="post">
      <input type="text" name="bookName" placeholder="Name"> <br> <br>
      <input type="text" name="desc" placeholder="Description">
      <button type="submit">Create</button>
    </form>

    <h2>List of Documents</h2> <br>

    <% data.forEach((item) => { %>
    <div style="border: 1px solid black; margin: 10px; min-width: fit-content">
        <a href="/update/<%=item._id%>"><%= item.bookName %></a> -
        <span><%= item.desc %></span>        
        <a href="/delete/<%=item._id%>" style="color: red;">Delete</a>
      </div>
      <%}) %>
      
  </body>
</html>
